<%- include('../partials/header') %>

<!-- Huge Section: Delicious Recipe Ideas -->
<div class="row flex-lg-row-reverse align-items-center g-5 py-4 mb-4">
  <div class="col-12 col-lg-6">
    <img src="/uploads/hero1.jpg" class="d-block mx-lg-auto img-fluid" alt="Delicious Recipe Ideas">
  </div>

  <div class="col-12 col-lg-6">
    <h1 class="display-5 fw-bold mb-3">Huge selection of delicious recipe ideas</h1>
    <p class="lead mb-4 text-muted blur-to-clear">
      Discover our wide range of mouthwatering Khmer cuisine recipes, including traditional curries, flavorful stir-fries, comforting soups, vibrant salads, easy desserts, vegetarian options, quick snacks, family-friendly dishes, and gluten-free choices.
    </p>
    <div class="d-grip gap-2 d-md-flex justify-content-md-start">
      <a href="/exploremenu" class="btn btn-primary btn-dark btn-lg px-4 me-md-2">Explore Menu</a>
      <a href="/index/see-review" class="btn btn-outline-danger btn-lg px-4 me-md-2">Our Food Reviews</a>
    </div>
  </div>
</div>

<!-- Categories Section -->
<h1 class="text-center my-4">Explore Our Categories</h1>
<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">
  <% if (products && products.length > 0) { %>
    <% products.forEach((product) => { %>
      <a href="/product/<%= product.id %>" class="col text-center category__link">
        <div class="category__img shadow">
          <img src="<%- product.image %>" loading="lazy" class="img-fluid" alt="<%- product.name %>">
        </div>
        <div class="pt-1"><%- product.name %></div>
      </a>
    <% }); %>
  <% } else { %>
    <p class="text-center">No categories available.</p>
  <% } %>
</div>

<!-- See Latest Menu Start-->
<%- include('latest-product') %>
<!-- See Latest Menu End -->


<!-- Submit Start -->
<section class="px-4 py-5 my-5 text-center">
  <img src="/uploads/hero.jpg" class="d-block mx-auto mb-4 img-fluid" alt="Publish Your Recipe" width="566" height="208" loading="lazy">
  <h1 class="display-5 fw-bold">Submit Your Review on Our Food</h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead mb-4">How do you think of our food? Let us know below!!</p>
    <div class="d-grip gap-2 d-sm-flex justify-content-sm-center">
      <a href="/index-review" class="btn btn-primary btn-dark btn-lg">Submit Your Review</a>
    </div>
  </div>
</section>

<%- include('../partials/footer') %>
