<%- include('../partials/header') %>

<h1 class="mb-4">Reviews List</h1>
<a href="index/create-review" class="btn btn-primary mb-3"> Add Your Review</a>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Food's Name</th>
            <th>Price</th>
            <th>Your Review</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        <% product-review.forEach(product => { %>
            <tr>
                <td><%= product.food_name %></td>
                <td><%= product.price %></td>
                <td><%= product.review %></td>
                <td><img src="<%=product.image %>" alt="<%= product.name %>" class="img-thumbnail" width="200"></td>
            </tr>
       <% }); %>
    </tbody>
</table>
<%- include('../partials/footer') %>