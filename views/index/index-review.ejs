<%- include('../partials/header') %>

<% if (success) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        Your review has been successfully added!
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<h1 class="mb-4">Reviews List</h1>
<a href="/index/create-review" class="btn btn-primary mb-3">Add Your Review</a>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Food's Name</th>
            <th>Price</th>
            <th>Your Review</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        <% if (productReview && productReview.length > 0) { %>
            <% productReview.forEach(product => { %>
                <tr>
                    <td><%= product.food_name %></td>
                    <td><%= product.price %></td>
                    <td><%= product.review %></td>
                    <td>
                        <% if (product.image) { %>
                            <img src="/uploads/<%= product.image %>" alt="Image of <%= product.food_name %>" class="img-thumbnail" width="200">
                        <% } else { %>
                            No image provided
                        <% } %>
                    </td>
                </tr>
            <% }); %>
        <% } else { %>
            <tr>
                <td colspan="4">No reviews available</td>
            </tr>
        <% } %>
    </tbody>
</table>

<%- include('../partials/footer') %>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
