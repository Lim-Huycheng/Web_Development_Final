<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Link to external CSS -->
    <link rel="stylesheet" href="css/exploremenu.css">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

    <title>Explore Latest Menu</title>
</head>

<body>
  <%- include('../partials/header') %>

  <div class="menu-container container">
    <h1 class="text-center mb-4">Explore Our Menu</h1>
    <p class="text-center mb-5">Below are our menu items. Click on 'View Details' for more information. Enjoy~~</p>
    
    <div class="menu-grid row">
        <% if (products && products.length > 0) { %>
            <% products.forEach(food => { %>
                <div class="col-12 col-md-6 col-lg-4 mb-4">
                    <div class="menu-item">
                        <h3 class="text-center"><%= food.name %></h3>
                        <!-- Display the food image -->
                        <div class="category__img shadow mb-3">
                            <img src="<%- food.image %>" loading="lazy" class="img-fluid">
                        </div>
                        <p class="text-center"><%= food.description %></p>
                        <a href="/product/<%= food.id %>" class="btn btn-primary d-block mx-auto">View Details</a>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p>No food items available.</p>
        <% } %>
    </div>
  </div>

  <%- include('../partials/footer') %>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
